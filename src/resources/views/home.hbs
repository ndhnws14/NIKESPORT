<div class="mt-4">
    <div class="row">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                <img src="https://www.soccerbible.com/media/136955/merc-fb-min.jpg" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                <img src="https://image-cdn.hypb.st/https%3A%2F%2Fhypebeast.com%2Fimage%2F2020%2F08%2Fnike-phantom-ft-football-boot-details-release-information-tw.jpg?w=1080&cbr=1&q=90&fit=max" class="d-block w-100" alt="..." width="1200px" height="630px">
                </div>
                <div class="carousel-item">
                <img src="https://assets.goal.com/v3/assets/bltcc7a7ffd2fbf71f5/blt2d16c2fa0408ddc6/62e1556d9f23b03fe6a7e46e/Best-Nike-football-boots-2022.jpg?auto=webp&format=pjpg&width=3840&quality=60" class="d-block w-100" alt="..." width="1200px" height="630px">
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-target="#carouselExampleIndicators" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-target="#carouselExampleIndicators" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </button>
    </div>

        {{#each nikemercurials}}
        <div class="col-sm-6 col-lg-4">
            <div class="card card-product-item">
                <a href="/nikemercurial/{{this.slug}}">
                    <img src="/uploads/{{this.image}}" class="card-img-top" alt="{{this.name}}">
                </a>
                <div class="card-body text-center">
                    <a href="/nikemercurial/{{this.slug}}">
                        <h5 class="card-title">{{this.name}}</h5>
                    </a>
                    <p class="card-text">{{this.price}}</p>
                    <p class="card-text">Hàng có sẵn</p>
                    <p class="card-text">{{this.size}}</p>
                    {{!-- <a href="#" class="btn btn-primary">Đặt Hàng</a> --}}
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>