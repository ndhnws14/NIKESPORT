<div class="mt-4">
    <div class="row">
        <div class="col-lg-3">
            <div class="admin-head">
                <i class="fa-solid fa-user-tie"><a href="/admin/index"> ADMIN </a></i>
            </div>
            <div class="admin-container">
                <div>
                    <ul class="admin-head-nav navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="/admin/orderlist">Quản Lý Đơn Hàng<span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-toggle="dropdown" aria-expanded="false">
                            Thêm Sản Phẩm
                            </a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="/admin/create-mer">Nike Mercurial</a>
                                <a class="dropdown-item" href="/admin/create-tem">Nike Tempo</a>
                                <a class="dropdown-item" href="/admin/create-sup">Nike Superfly</a>
                                <a class="dropdown-item" href="/admin/create-phan">Nike Phantom</a>
                                <a class="dropdown-item" href="/admin/create-vic">Nike Vic</a>
                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-toggle="dropdown" aria-expanded="false">
                            Quản Lý Kho Hàng
                            </a>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" href="/admin/warehouses-mer">SP Nike Mercurial</a>
                                <a class="dropdown-item" href="/admin/warehouses-tem">SP Nike Tempo</a>
                                <a class="dropdown-item" href="/admin/warehouses-sup">SP Nike Superfly</a>
                                <a class="dropdown-item" href="/admin/warehouses-phan">SP Nike Phantom</a>
                                <a class="dropdown-item" href="/admin/warehouses-vic">SP Nike Vic</a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin/info-customer">Quản Lý Thông Tin Tài Khoản<span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/admin/account-admin">Tài khoản<span class="sr-only">(current)</span></a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-lg-9">
            <div class="cart-header">
                <a href="/admin/orderlist" style="color:#343434"><i class="fa-solid fa-arrow-left"></i> Trở lại trang danh sách</a>
            </div>
            <h3 class="text-center" style="font-weight: bold;">Chi Tiết Đơn Hàng</h3>
            <div class="info-details">
               <h6 style="font-style: oblique; font-weight: bold;">Thông Tin Nhận Hàng:</h6>
                <ul class="list-group">
                    <li class="list-group-item">Mã đơn hàng: {{orders._id}}</li>
                    <li class="list-group-item">Tên khách hàng: {{orders.customerName}}</li>
                    <li class="list-group-item">Địa chỉ: {{orders.address}}</li>
                    <li class="list-group-item">Số điện thoại: {{orders.phone}}</li>
                </ul> 
            </div>
            <div class="products-details">
                <h6 style="font-style: oblique; font-weight: bold;">Thông Tin Đơn Hàng:</h6>
                <table class="table table-striped table-cart">
                    <thead>
                        <tr>
                            <th scope="col" class="text-center">#</th>
                            <th scope="col" class="text-center">Tên sản phẩm</th>
                            <th scope="col" class="text-center">Size</th>
                            <th scope="col" class="text-center">Số lượng</th>
                            <th scope="col" class="text-center">Thành tiền</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each orders.products}}
                        <tr>
                            <td style="font-weight: bold;">{{sum @index 1}}</td>
                            <td style="font-weight: bold;">{{this.name}}</td>
                            <td class="text-center" style="font-style: oblique;">{{this.size}}</td> 
                            <td class="text-center" style="font-style: oblique;">{{this.quantity}}</td>
                            <td class="text-center" style="font-style: oblique;">{{this.totalPrice}}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="3"></td>
                            <td class="text-center" style="font-weight: bold; font-style: oblique;">Tổng thành tiền:</td>
                            <td class="text-center" style="font-weight: bold; font-style: oblique;">{{orders.total}}</td>
                        </tr>
                    </tfoot>
                </table>
                <div>
                    <div style="font-weight: bold; font-size: 1.2rem">Trạng Thái Đơn Hàng: <p style="font-style: italic; color:blue">Đã Xác Nhận <i class="fa-solid fa-check"></i></p></div>
                    <p style="font-weight: bold; font-size: 1.2rem">Người Kiểm Duyệt: ADMIN NIKESPORT</p>
                </div>
            </div>
            <div class="edit-btn">
                <button type="submit" class="btn btn-primary btn-delete-admin"><a href="/admin/orderlist" style="color: #ffffff;">Duyệt</a></button>
            </div>
        </div>
    </div>
</div>