        <div class="col-lg-9">
            <h3>Cập nhật sản phẩm Nike Tempo</h3>
            <form class="mt-4" method="POST" action="/admin/store-tem/{{niketempos._id}}?_method=PUT">
                <div class="form-group">
                    <label for="name">Tên Sản Phẩm</label>
                    <input type="text" class="form-control" value="{{niketempos.name}}" id="name" name="name">
                </div>
                <div class="form-group">
                    <label for="description">Mô Tả Sản Phẩm</label>
                    <textarea class="form-control" id="description" name="description">{{niketempos.description}}</textarea>
                </div>
                <div class="form-group">
                    <label for="price">Giá Sản Phẩm</label>
                    <input type="text" class="form-control" value="{{niketempos.price}}" id="price" name="price">
                </div>
                <div class="form-group">
                    <label for="image">Hình Ảnh Sản Phẩm</label>
                    <input type="text" class="form-control" value="{{niketempos.image}}" id="image" name="image">
                </div>
                <div class="form-group">
                    <label for="size">Size</label>
                    <input type="text" class="form-control" value="{{niketempos.size}}" id="size" name="size">
                </div>
                <div class="form-group">
                    <label for="totalproduct">Số Lượng Hàng</label>
                    <input type="text" class="form-control" value="{{niketempos.totalproduct}}" id="totalproduct" name="totalproduct">
                </div>
                <button type="submit" class="btn btn-primary btn-delete-admin">Cập Nhật</button>
            </form>
        </div>
