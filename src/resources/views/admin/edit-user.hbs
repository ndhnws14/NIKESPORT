        <div class="col-lg-9">
            <div>
                <h3 class="text-center">Chỉnh sửa thông tin tài khoản</h3>
                <form method="POST" action="/admin/data-user/{{users._id}}?_method=PUT">
                    <div class="form-group row">
                        <label for="email" class="col-sm-2 col-form-label"><i class="fa-solid fa-envelope"></i></label>
                        <div class="col-sm-10">
                            <input type="text"   class="form-control" id="email" value="{{users.email}}"> 
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="fullname" class="col-sm-2 col-form-label"><i class="fa-solid fa-signature"></i></label>
                        <div class="col-sm-10">
                            <input type="text"  class="form-control" id="fullname" value="{{users.fullname}}"> 
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="phone" class="col-sm-2 col-form-label"><i class="fa-solid fa-phone"></i></label>
                        <div class="col-sm-10">
                            <input type="text"  class="form-control" id="phone" value="{{users.phone}}"> 
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="address" class="col-sm-2 col-form-label"><i class="fa-solid fa-location-dot"></i></label>
                        <div class="col-sm-10">
                            <input type="text"  class="form-control" id="address" value="{{users.address}}"> 
                        </div>
                    </div>
                    <div class="form-group row">
                        <label for="role" class="col-sm-2 col-form-label"><i class="fa-solid fa-id-card-clip"></i></label>
                        <div class="col-sm-10">
                            <input type="text" readonly class="form-control" id="role" value="Khách Hàng"> 
                        </div>
                    </div>
                    <div class="edit-btn">
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-primary">Cập Nhật</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
